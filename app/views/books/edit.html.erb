<% if @book.errors.any? %>
  <%= @book.errors.count %>errors!!!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end%>
  </ul>
<%end%>

<h1>edit</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %><!--Urlはなくてもいけた-->
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<%end%>

<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>