<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<%end%>


<h1>Books</h1>
<table class="books_table"><!--~~~~~~~~~~~~~-->
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th><br></th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to 'Show', book_path(book.id) %>
      <%= link_to 'Edit', edit_book_path(book.id) %>
      <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "ok?" %>
    </td>
  </tr>
  <%end%>
</table>                   <!--~~~~~~~~~~~~~~~~-->


<% if @book.errors.any? %>
  <%= @book.errors.count %>errors!!!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end%>
  </ul>
<%end%>


<h3>New Book</h3>
<%= form_with model: @book do |f|%>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<%end%>
