<div class="index_all">

  <div>
      <% if flash[:notice] %>
        <p class="destroy_notice"><%= flash[:notice] %></p>
      <% end %>
  </div>

  <h1>Books</h1>
  <div class="index1">

    <table class="ha">
      <div class="ld_tbs">
      <tr>
        <th class="l_tb">Title</th>
        <th class="l_tb">Body</th>
        <th class="l_tb"><br></th>
      </tr>
      </div>



      <div class="ld_tbs">
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><span>
              <a class="button"><%= link_to 'Show', book_path(book.id) %></a>
              <a class="button"><%= link_to 'Edit', edit_book_path(book.id) %></a>
              <a class="button"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a>
            </span></td>
          </tr>
        <%end%>
      </div>

    </table>

  </div>



  <h2>New Book</h2>

  <div class="index2">
    <div class="index_error">
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <%end%>
    </div>

    <%= form_with model: @book, url: books_path, method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>

      <div class="xx">
        <p>Body</p>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>


</div>